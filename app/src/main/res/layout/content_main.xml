<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_main_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="36dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/pdf_read_icon"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/open_pdf"
        android:src="@drawable/open_book"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tap_to_open_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"
        android:text="@string/tap_to_open"
        android:textAllCaps="true"
        android:textColor="@color/darkerPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pdf_read_icon" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/recentParent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tap_to_open_pdf">

        <TextView
            android:id="@+id/recent_one"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_recent"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/recent_two"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recent_two"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_recent"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/recent_one"
            app:layout_constraintRight_toLeftOf="@id/recent_three"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recent_three"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_recent"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/recent_two"
            app:layout_constraintRight_toLeftOf="@id/recent_four"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recent_four"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_recent"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/recent_three"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/recentParent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recentParent1">

        <TextView
            android:id="@+id/recent_one_title"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/recent_two_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recent_two_title"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/recent_one_title"
            app:layout_constraintRight_toLeftOf="@id/recent_three_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recent_three_title"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/recent_two_title"
            app:layout_constraintRight_toLeftOf="@id/recent_four_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recent_four_title"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/recent_three_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>